###################################################################
# SIMPLE-MC INPUT PARAMETERS
###################################################################

# particles: number of particles to simulate
particles=1000000

# batches: number of batches
batches=10

# generations: number of generations per batch
generations=1

# active: number of active batches
active=10

# nuclides: number of nuclides in material
nuclides=1

# tally: whether to tally
tally=true

# bins: number of bins in each dimension of mesh
bins=16

# seed: RNG seed
seed=1

# nu: average number of fission neutrons produced
nu=2.5

# xs_f: fission macroscopic cross section of material
xs_f=0.012

# xs_a: absorption macroscopic cross section of material
xs_a=0.03

# xs_s: scattering macroscopic cross section of material
xs_s=0.27

# bc: boundary conditions (vacuum, reflective, periodic)
bc=reflective

# Lx: length of domain in x dimension
Lx=400

# Ly: length of domain in y dimension
Ly=400

# Lz: length of domain in z dimension
Lz=400

# load_source: load the source from binary file source.dat
load_source=false

# save_source: output the source to binary file source.dat
save_source=false

# write_tally: whether to output tallies
write_tally=false

# write_entropy: whether to output entropy
write_entropy=false

# write_keff: whether to output keff
write_keff=false

# write_bank: whether to output particle bank
write_bank=false

# write_histories: whether to output total number of histories at each generation
write_histories=false

# tally_file: path to tally output
tally_file=tally.dat

# entropy_file: path to entropy output
entropy_file=entropy.dat

# keff_file: path to keff output
keff_file=keff.dat

# bank_file: path to particle bank output
bank_file=bank.dat

# histories_file: path to write total number of histories to
histories_file=histories.dat

# ramp_up: whether to use ramp up method to converge source: true or false
ramp_up=true
